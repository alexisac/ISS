<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hospitalpharmacy.InterfaceRegisterDoctor">
   <children>
      <Label focusTraversable="false" layoutX="110.0" layoutY="25.0" text="REGISTER DOCTOR">
         <font>
            <Font name="Georgia Bold" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="nameText" focusTraversable="false" layoutX="184.0" layoutY="92.0" promptText="Doctor name">
         <font>
            <Font name="Georgia" size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="codeText" focusTraversable="false" layoutX="184.0" layoutY="142.0" promptText="Doctor code">
         <font>
            <Font name="Georgia" size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="confirmedCodeText" focusTraversable="false" layoutX="184.0" layoutY="190.0" promptText="Repeat doctor code">
         <font>
            <Font name="Georgia" size="18.0" />
         </font>
      </TextField>
      <Button focusTraversable="false" layoutX="184.0" layoutY="298.0" mnemonicParsing="false" onAction="#signUp" text="Sign up">
         <font>
            <Font name="Georgia Bold" size="18.0" />
         </font>
      </Button>
      <Button focusTraversable="false" layoutX="319.0" layoutY="298.0" mnemonicParsing="false" onAction="#logout" text="Go back">
         <font>
            <Font name="Georgia Bold" size="18.0" />
         </font>
      </Button>
      <ComboBox fx:id="wardCombo" focusTraversable="false" layoutX="184.0" layoutY="240.0" prefHeight="33.0" prefWidth="233.0" promptText="Choose ward" />
   </children>
</AnchorPane>
